<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDisabled</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>
    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="IntroTheme" parent="MainTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="MainTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorGrayLight</item>
        <item name="android:windowBackground">@drawable/bg_home_screen</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <!--Error label text style-->
    <style name="EdittextErrorStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">34dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:width">50dp</item>
    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">80dp</item>
    </style>


    <style name="Theme.GuidelinesCompat.Light.DarkToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Custom.Widget.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">
            @style/Custom.Widget.ActionButton.Overflow
        </item>
    </style>

    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

</resources>

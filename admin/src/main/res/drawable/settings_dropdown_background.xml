<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:topRightRadius="4dp" android:topLeftRadius="4dp"
                android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />

            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item
        android:gravity="end"
        android:drawable="@drawable/ic_arrow_drop_down_black_24dp" />
</layer-list>
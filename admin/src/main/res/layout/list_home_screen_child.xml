<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/clMainLayout"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/cell_transparent_spl">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDevicePicture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clDeviceNameDistance"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="2.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  >

        <ImageView
            android:id="@+id/ivDevicePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/clDeviceNameDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivArrowNext"
        app:layout_constraintHorizontal_weight="6.5"
        app:layout_constraintStart_toEndOf="@+id/clDevicePicture"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp">

        <hr.sil.android.seeusadmin.fonts.TextViewRegularFont
            android:id="@+id/tvDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <hr.sil.android.seeusadmin.fonts.TextViewRegularFont
            android:id="@+id/tvDeviceDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"  />

        <hr.sil.android.seeusadmin.fonts.TextViewRegularFont
                android:id="@+id/tvMacAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"  />

    </LinearLayout>


    <ImageView
        android:id="@+id/ivArrowNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clDeviceNameDistance"
        android:paddingLeft="20dp"
        android:src="@drawable/ic_chevron_right"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>

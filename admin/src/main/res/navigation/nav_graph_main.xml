<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/navigation_home" >

    <fragment
        android:id="@+id/navigation_home"
        android:name="hr.sil.android.seeusadmin.view.fragment.NavHomeFragment"
            tools:layout="@layout/fragment_main_screen">
        <action
            android:id="@+id/home_screen_fragment_to_device_details_fragment"
            app:destination="@id/device_details_fragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right" />
    </fragment>

    <fragment
            android:id="@+id/navigation_alert"
            android:name="hr.sil.android.seeusadmin.view.fragment.NavAlertsFragment"
            tools:layout="@layout/fragment_settings">
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="hr.sil.android.seeusadmin.view.fragment.NavSettingsFragment"
        tools:layout="@layout/fragment_settings">
    </fragment>


    <fragment
            android:id="@+id/device_details_fragment"
            android:name="hr.sil.android.seeusadmin.view.fragment.StationItemDetailsFragment">
        <action
                android:id="@+id/device_details_fragment_to_google_maps_fragment"
                app:destination="@id/google_maps_fragment"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right" />
        <action
                android:id="@+id/device_details_fragment_to_home_screen_fragment"
                app:destination="@id/navigation_home"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right" />
        <action
                android:id="@+id/device_details_fragment_to_station_settings_fragment"
                app:destination="@id/station_settings_fragment"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right" />
        <action
                android:id="@+id/device_details_fragment_to_manage_buttons_fragment"
                app:destination="@id/manage_button_fragment"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right" />
        <action
                android:id="@+id/device_details_fragment_to_network_settings_fragment"
                app:destination="@id/network_settings"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right" />
    </fragment>

    <fragment
            android:id="@+id/google_maps_fragment"
            android:name="hr.sil.android.seeusadmin.view.fragment.GoogleMapsLatLongFragment"
            tools:layout="@layout/fragment_google_maps">
        <action
                android:id="@+id/google_map_fragment_to_station_details_fragment"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right"
                app:destination="@id/device_details_fragment"
                app:popUpTo="@+id/device_details_fragment"
                app:popUpToInclusive="true" />
    </fragment>

    <fragment
            android:id="@+id/station_settings_fragment"
            android:name="hr.sil.android.seeusadmin.view.fragment.StationSettingsFragment"
            tools:layout="@layout/map_fragment">
        <action
                android:id="@+id/station_settings_to_device_details_fragment"
                app:destination="@id/device_details_fragment"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right" />
    </fragment>

    <fragment
            android:id="@+id/manage_button_fragment"
            android:name="hr.sil.android.seeusadmin.view.fragment.ManageButtonsFragment"
            tools:layout="@layout/map_fragment">
        <action
                android:id="@+id/manage_button_to_device_details_fragment"
                app:destination="@id/device_details_fragment"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right" />
    </fragment>

    <fragment
            android:id="@+id/network_settings"
            android:name="hr.sil.android.seeusadmin.view.fragment.NetworkSettingsFragment"
            tools:layout="@layout/fragment_network_settings">
        <action
                android:id="@+id/network_settings_to_device_details_fragment"
                app:destination="@id/device_details_fragment"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_left"
                app:popEnterAnim="@anim/enter_from_left"
                app:popExitAnim="@anim/exit_to_right" />
    </fragment>

</navigation>